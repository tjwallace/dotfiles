# One tab press for possible completions
set show-all-if-ambiguous on

# Up and down history search
$if Bash
  "\e[B": history-search-forward
  "\e[A": history-search-backward
$endif]"

# mappings for Ctrl-left-arrow and Ctrl-right-arrow for word moving
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word
