[user]
	name = Jeff Wallace
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>

[github]
	user = tjwallace

[alias]
	ci = commit -a
	co = checkout
	st = status -sb
	hist = log --pretty=format:\"%h | %ad | %s %Cgreen[%an]%Creset%Cred%d%Creset\" --graph --date=short
	wd = diff --word-diff
	d = diff
	dc = diff --cached
	yolo = push --force-with-lease origin HEAD

[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
	grep = auto
	interactive = auto
	pager = true

[core]
	editor = vim
	pager = most
	excludesfile = ~/.gitignore

[push]
	default = current

[branch]
	autosetuprebase = always

[rebase]
	autoSquash = true
	autoStash = true

[mergetool]
	keepBackup = false

[mergetool "p4merge"]
	cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
	trustExitCode = false
	keepTemporaries = false
